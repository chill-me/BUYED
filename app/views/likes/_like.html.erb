<% if post.liked_by?(@current_user) %>
    <%= link_to post_likes_path(post.id), method: :delete, remote: true do %>
        <i class="far fa-heart unlike-btn fa-2x"><p class="likes_count"><%= post.likes.count %></p></i>
    <% end %>
<% else %>
    <%= link_to post_likes_path(post.id), method: :post, remote: true do %>
        <i class="far fa-heart like-btn fa-2x"><p class="likes_count"><%= post.likes.count %></p></i>
    <% end %>
<% end %>